<resources>

    <style name="TextViewInColoredCard">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SubTextViewInColoredCard">
        <item name="android:textColor">@color/grey_10</item>
    </style>

    <style name="IconInColoredCard">
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="TemperatureTextView">
        <item name="android:textSize">70sp</item>
        <item name="android:textColor">@color/grey_10</item>
    </style>

    <style name="DescriptionTextView">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey_10</item>
    </style>

    <style name="HumidityTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey_10</item>
    </style>

    <style name="WindSpeedTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey_10</item>
    </style>

    <style name="MaterialSearchViewStyle">
        <!-- Background for the search bar -->
        <item name="searchBackground">@color/material_blue</item>

        <!-- Change text color for edit text. This will also be the color of the cursor -->
        <item name="android:textColor">@android:color/black</item>

        <!-- Change hint text color for edit text -->
        <item name="android:textColorHint">@android:color/black</item>
    </style>
</resources>
